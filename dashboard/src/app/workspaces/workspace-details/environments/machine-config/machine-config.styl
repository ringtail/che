.workspace-machine-config
  *
    outline none

  .config-title-row
    padding 15px 0
    border-bottom 1px solid $list-separator-color

    .config-title
      padding 0 17px
      white-space nowrap
      text-transform uppercase
      font-size 12px
      color #555c65 //TODO

    .config-title-action-show, .config-title-action-delete
      color darken($stroke-color, 13%)
      font-size 14px
      cursor pointer

    .config-title-action-edit
      color $primary-color
      font-size 14px
      cursor pointer

  .config-params
    padding 0 70px
    background-color $light-gray-color

    .config-params-table
      margin-top -25px

    .config-dev-machine-switch
      margin -22px 0

      .config-dev-machine-info
        padding-left 13px
